<div class="card" id="<%= dom_id product %>">
  <%= image_tag(product.featured_photo)%>
  <div class="details">
    <p class="name"> <%= product.name %> </p>
    <p class="price"> <%= number_to_currency product.price.to_f/100 %> </p>
  </div>
  <div class="rating">
    <% 5.times do |i| %>
      <%= inline_svg_tag "star.svg", class: (i < product.rating  ? "rating-star illuminated" : "rating-star") %>
    <% end %>
  </div>
  <%= render :partial => "products/cart_controls", :locals => { 
      product: product,
      in_cart: in_cart
  } %>
</div>

